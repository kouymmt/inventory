//dsn
vi /etc/hosts
192.168.10.10 chstock.com

//laravel install,update
vagrant ssh
cd for_tallsecret/
composer update

db設定
mysql -u root
GRANT ALL ON *.* TO root@localhost IDENTIFIED BY 'root';
FLUSH PRIVILEGES;
mysql -u root -proot

php artisan migrate;





//laravel-worker.confのnumprocsを１に設定していないが、↓は保険として
vi /etc/cron.d/queue
#0 * * * * root php ../../home/vagrant/for_tallsecret/artisan queue:restart
*/20 * * * * root  supervisorctl restart all
1 */2 * * * root log.io-file-input
sudo service cron restart

//nginx
vi /etc/nginx/sites-available/chstock.com
client_max_body_size 50M;


